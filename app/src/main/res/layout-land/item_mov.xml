<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">


    <ImageView
        android:id="@+id/ivPoster"
        android:layout_width="400dp"
        android:scaleType="fitXY"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/info_container"
        tools:srcCompat="@tools:sample/avatars" />

    <RelativeLayout
        android:id="@+id/info_container"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/ivPoster"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="24sp"
            tools:text="A star is born" />

        <TextView
            android:id="@+id/tvOverView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTitle"
            android:layout_marginStart="3dp"
            android:text="TextView"
            android:textSize="14sp"
            tools:text='When Eddie Brock acquires the powers of a symbiote, he will have to release his alter-ego "Venom" to save his life.' />
    </RelativeLayout>
</LinearLayout>
